<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">


	<EditText
		android:id="@+id/editTextName"
		android:layout_width="290dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="120dp"
		android:ems="10"
		android:hint="@string/join_form_name"
		android:paddingLeft="15dp"
		android:theme="@style/edit_text"
		android:inputType="textPersonName"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.504"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />


	<EditText
		android:id="@+id/editTextEmailPhone"
		android:layout_width="290dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="32dp"
		android:ems="10"
		android:hint="@string/join_form_email"
		android:paddingLeft="15dp"
		android:theme="@style/edit_text"
		android:inputType="textEmailAddress"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.502"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editTextName" />

	<EditText
		android:id="@+id/editTextPassword"
		android:layout_width="290dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="32dp"
		android:ems="10"
		android:hint="@string/join_form_password"
		android:paddingLeft="15dp"
		android:theme="@style/edit_text"
		android:inputType="textPassword"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.502"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editTextEmailPhone" />

	<EditText
		android:id="@+id/editTextPasswordConfirm"
		android:layout_width="290dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="32dp"
		android:ems="10"
		android:hint="@string/join_form_password_confirm"
		android:paddingLeft="15dp"
		android:theme="@style/edit_text"
		android:inputType="textPassword"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.502"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

	<Button
		android:id="@+id/buttonConfirm"
		android:layout_width="290dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="60dp"
		android:text="JOIN"
		app:backgroundTint="@color/TerraCotta"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editTextPasswordConfirm" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="140dp"
		android:layout_marginEnd="4dp"
		android:layout_marginRight="4dp"
		android:src="@drawable/ic_join_name"
		app:layout_constraintEnd_toStartOf="@+id/editTextName"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/imgEmailPhone"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="215dp"
		android:layout_marginEnd="4dp"
		android:layout_marginRight="4dp"
		android:src="@drawable/ic_join_email"
		app:layout_constraintEnd_toStartOf="@+id/editTextEmailPhone"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="290dp"
		android:layout_marginEnd="4dp"
		android:layout_marginRight="4dp"
		android:src="@drawable/ic_login_pw"
		app:layout_constraintEnd_toStartOf="@+id/editTextPassword"
		app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>