<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/constraintLayout"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:padding="20dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<ImageView
			android:id="@+id/imageViewPostUserProfile"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:src="@mipmap/ic_launcher_round"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/textViewPostUser"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:text="Placeholder"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="@+id/imageViewPostUserProfile"
			app:layout_constraintTop_toTopOf="parent" />
	</androidx.constraintlayout.widget.ConstraintLayout>

	<androidx.viewpager.widget.ViewPager
		android:id="@+id/images"
		android:layout_width="match_parent"
		android:layout_height="150dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
		android:background="@color/design_default_color_primary"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintTop_toBottomOf="@+id/images"
		android:padding="20dp">

		<TextView
			android:id="@+id/textViewPost"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="어쩌구 저쩌구 글 내용 어쩌구 저쩌구 어떻게접지?"/>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@+id/textViewPost">

			<Button
				android:id="@+id/buttonLike"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />
		</androidx.constraintlayout.widget.ConstraintLayout>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="댓글"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<ImageView
				android:id="@+id/imageViewReactionUserProfile"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginLeft="50dp"
				android:src="@mipmap/ic_launcher_round"
				app:layout_constraintStart_toEndOf="@+id/textView"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/textViewReactionUser"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ㅇㅇ"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toEndOf="@+id/imageViewReactionUserProfile"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/textViewReaction"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="adsfaefdsfcx"
				android:layout_marginLeft="25dp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toEndOf="@+id/textViewReactionUser"
				app:layout_constraintTop_toTopOf="parent" />

		</androidx.constraintlayout.widget.ConstraintLayout>
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>