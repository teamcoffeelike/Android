<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<!-- 카드뷰 시작 -->
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		app:cardUseCompatPadding="false">

		<!-- 카드뷰 전체 레이아웃 -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="500dp"
			android:orientation="vertical"
			android:weightSum="5">

			<!-- 상단 : 사용자 프사, 닉네임 -->
			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/constraintLayout"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="0.6"
				android:padding="5dp">

				<ImageView
					android:id="@+id/imageViewPostUserProfile"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_marginStart="4dp"
					android:layout_marginLeft="4dp"
					android:src="@mipmap/ic_launcher_round"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent" />

				<TextView
					android:id="@+id/textViewPostUser"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:layout_marginLeft="8dp"
					android:text="Placeholder"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toEndOf="@+id/imageViewPostUserProfile"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintVertical_bias="0.878" />

			</androidx.constraintlayout.widget.ConstraintLayout>

			<!-- 업로드한 사진 -->
			<androidx.viewpager.widget.ViewPager
				android:id="@+id/images"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="3"
				android:background="@color/NewYorkPink"/>

			<!-- 하단 -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1.4"
				android:orientation="vertical"
				android:weightSum="3">

				<!-- 사진과 함께 작성된 글 -->
				<TextView
					android:id="@+id/textViewPost"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1.3"
					android:text="어쩌구 저쩌구 글 내용 어쩌구 저쩌구 어떻게접지?"/>

				<!-- 좋아요 -->
				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					app:layout_constraintTop_toBottomOf="@+id/textViewPost">

					<Button
						android:id="@+id/buttonLike"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" />
				</androidx.constraintlayout.widget.ConstraintLayout>

				<!-- 댓글 -->
				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="0.7">

					<TextView
						android:id="@+id/textView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="댓글"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" />

					<ImageView
						android:id="@+id/imageViewReactionUserProfile"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_marginLeft="50dp"
						android:src="@mipmap/ic_launcher_round"
						app:layout_constraintStart_toEndOf="@+id/textView"
						app:layout_constraintTop_toTopOf="parent" />

					<TextView
						android:id="@+id/textViewReactionUser"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="ㅇㅇ"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toEndOf="@+id/imageViewReactionUserProfile"
						app:layout_constraintTop_toTopOf="parent" />

					<TextView
						android:id="@+id/textViewReaction"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="댓글 내용"
						android:layout_marginLeft="25dp"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toEndOf="@+id/textViewReactionUser"
						app:layout_constraintTop_toTopOf="parent" />

				</androidx.constraintlayout.widget.ConstraintLayout>



			</LinearLayout>



		</LinearLayout>


	</androidx.cardview.widget.CardView>

