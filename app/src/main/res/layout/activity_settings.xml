<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".activity.SettingsActivity">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:maxWidth="300dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<ImageView
			android:id="@+id/logo"
			android:layout_width="wrap_content"
			android:layout_height="100dp"
			android:layout_marginBottom="20dp"
			android:contentDescription="@string/description_logo"
			android:src="@drawable/logo"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<Button
			android:id="@+id/buttonEditProfileImage"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="55dp"
			android:text="@string/setting_profile"
			android:textColor="@color/white"
			app:backgroundTint="@color/TerraCotta"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/logo" />

		<Button
			android:id="@+id/buttonChangePassword"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="55dp"
			android:text="@string/setting_change_password"
			android:textColor="@color/white"
			app:backgroundTint="@color/TerraCotta"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/buttonEditProfileImage" />

		<Button
			android:id="@+id/buttonLogout"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="55dp"
			android:text="@string/setting_logout"
			android:textColor="@color/white"
			app:backgroundTint="@color/TerraCotta"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/buttonChangePassword" />

	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>