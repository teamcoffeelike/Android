<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintBottom_toTopOf="@id/pageIndexLayout"
		app:layout_constraintTop_toTopOf="parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/imageLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<ImageView
					android:id="@+id/imageView"
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:background="@color/empty_attachment"
					android:contentDescription="@string/description_recipe_image"
					android:scaleType="centerCrop"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintDimensionRatio="H,4:3"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent" />

			</androidx.constraintlayout.widget.ConstraintLayout>

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingHorizontal="10dp"
				android:paddingTop="10dp"
				android:paddingBottom="100dp">

				<TextView
					android:id="@+id/textViewText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/very_long_text"
					android:textColor="@color/VanDykeBrown"
					android:textSize="18sp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent" />

			</androidx.constraintlayout.widget.ConstraintLayout>

		</LinearLayout>

	</ScrollView>

	<LinearLayout
		android:id="@+id/pageIndexLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintBottom_toBottomOf="parent">

		<View style="@style/Divider.Horizontal" />

		<TextView
			android:id="@+id/textViewPageIndex"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/VanDykeBrown"
			android:textSize="18sp"
			android:textStyle="bold" />

	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>