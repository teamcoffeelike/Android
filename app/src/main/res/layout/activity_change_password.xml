<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ChangePasswordActivity">

	<ImageButton
		android:id="@+id/passwordSubmit"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:src="@drawable/ic_done"
		style="?android:attr/borderlessButtonStyle"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="1.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/textViewPassword"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="244dp"
		android:text="현재 비밀번호"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.166"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/textViewPwConfirm"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toTopOf="@+id/editTextPassword"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.227"
		app:layout_constraintStart_toEndOf="@+id/textViewPassword"
		android:visibility="gone"/>

	<EditText
		android:id="@+id/editTextPassword"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="textPassword"
		android:paddingLeft="15dp"
		android:theme="@style/edit_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.495"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textViewPassword" />

	<TextView
		android:id="@+id/textViewNewPassword"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="새로운 비밀번호"
		app:layout_constraintBottom_toTopOf="@+id/editTextNewPassword"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.173"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
		app:layout_constraintVertical_bias="1.0" />

	<EditText
		android:id="@+id/editTextNewPassword"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="32dp"
		android:ems="10"
		android:inputType="textPassword"
		android:paddingLeft="15dp"
		android:theme="@style/edit_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.495"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

	<TextView
		android:id="@+id/textViewCheckPassword"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="비밀번호 확인"
		app:layout_constraintBottom_toTopOf="@+id/editTextCheckPassword"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.166"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editTextNewPassword"
		app:layout_constraintVertical_bias="1.0" />

	<TextView
		android:id="@+id/textViewCheckPwConfirm"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30sp"
		app:layout_constraintBottom_toTopOf="@+id/editTextCheckPassword"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toEndOf="@+id/textViewCheckPassword"
		android:visibility="gone" />

	<EditText
		android:id="@+id/editTextCheckPassword"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="40dp"
		android:ems="10"
		android:inputType="textPassword"
		android:paddingLeft="15dp"
		android:theme="@style/edit_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.495"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editTextNewPassword" />



</androidx.constraintlayout.widget.ConstraintLayout>